<div class="container">
  <h2>View - customer table</h2><hr/>
    <div class="row">
      <div class="col-md-12">
          <% if (success !='') { %>

            <div class="alert alert-success fade in">
                  <%= success %>
            </div>
          <% } %>
          <% if (error !='') { %>
              <div class="alert alert-danger fade in">
                 <%= error %>
              </div>
        <% } %>
      </div> 
    </div>  
    <div class="row">
      <div class="col-md-10">
        <% if((results != undefined) &&  (results.length > 0)){ %>

              <div class="table-responsive">
                <table class="table table-bordered">
                  <tr>
                    <th>Name</th>
                    <th>Address</th>
                    <th>Action</th>
                  </tr>
                  <tr>
                      <% for(var i = 0; i < results.length; i++){ %>
                          <td><%= results[i].name  %></td> 
                          <td><%= results[i].address  %></td>
                          <td><a data-id="<%= results[i].id  %>" data-csrf="<%= csrfToken  %>" class="btn btn-danger"  onclick="rowdeleteFn(this);" >Delete</a>
                          <a data-id="<%= results[i].id  %>" data-csrf="<%= csrfToken  %>" class="btn btn-primary"  onclick="rowUpdateFn(this);" >Update</a>

                          </td>
                        </tr>
                      <% } %>
                  </tr>  
                </table>    
              </div> 
        <% } %>
      </div>  
    </div>  
  </div>
  <script src="../../javascripts/main.js"></script>
</body>
</html>